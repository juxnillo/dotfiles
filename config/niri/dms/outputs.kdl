//Main Monitor
output "DP-2" {
    mode "1920x1080@144.000"
    scale 1
    transform "normal"
    position x=1920 y=0
    variable-refresh-rate // on-demand=true
    focus-at-startup
}

//Second Monitor
output "HDMI-A-1" {
    mode "1920x1080@60.000"
    scale 1
    transform "normal"
    position x=0 y=0
}
